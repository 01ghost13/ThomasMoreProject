<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
	<![endif]-->
</head>
<body>
<header class="navbar navbar-fixed-top navbar-inverse" id="header_id">
  <div class="container">
    <nav>
    	<ul class="nav navbar-nav navbar-right">
    	<% if logged_in? %>
        <% if session[:user_type] != 'student' %>
          <% unless current_user.info.is_mail_confirmed %>
            <li><%= link_to 'Send confirmation again', send_confirmation_again_path(id: session[:user_id]) %></li>
          <% end %>
        <% end %>
        <li>
          <%= form_tag search_path, method: :get, class: 'form-inline',
                       style: 'margin: -5px 0px -10px 0px;' do %>
              <div class="form-group">
                <%= label_tag :query, nil, class: 'sr-only' %>
                <%= search_field_tag :query, nil, placeholder: 'search here...',
                                     class: 'form-control', style: 'margin-top: 15px;' %>
              </div>
              <div class="form-group">
                <%= submit_tag 'Search', class: 'btn btn-default' %>
              </div>
          <% end %>
        </li>
    		<%= render "#{session[:user_type].pluralize}/settings" %>
    	<% else %>
    		<li><%= link_to 'Log in', login_path %></li>
    		<li><%= link_to 'Sign up', new_administrator_path %></li>
    	<% end %>
    	<li>
    		<%= link_to 'About', about_path %>
    	</li>
    	<li>
    		<!--<%= link_to 'Contacts', contacts_path %>-->
    	</li>
    	</ul>
    </nav>
  </div>
</header>
<div class="container">
	<% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>"><%= message %></div>
	<% end %>
	<%= yield %>
	<%= debug(params) if Rails.env.development? %>
</div>
</body>
</html>
