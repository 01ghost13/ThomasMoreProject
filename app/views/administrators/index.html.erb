<% provide(:title,"Administrators List") %>
<h1>Names of all administrators</h1>
<div class="col-sm-4">
	<table class="table table-hover">
		<% @admins.each do |admin| %>
			<tr>
				<td><h4><%= admin[:last_name].titleize + " " + admin[:name] %></h4></td>		
				<td><h4><small><%= admin[:organisation].titleize %></small></h4></td>
				<td><%= link_to("Edit", edit_administrator_path(admin[:id]), class: "btn btn-default") %></td>
			</tr>
		<% end %>
	</table>
</div>