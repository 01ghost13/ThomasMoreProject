<% provide(:title,'Delete administrator') %>
<h1 class="row col-sm-offset-4">Delete administrator</h1>
<h3 class="row col-sm-offset-2">For deletion you must choose new Administrator for associated mentors.</h3>
<%= render 'shared/error_message' %>

<%= form_for @administrator.employee,
             url: delete_administrator_path(@administrator.id),
             method: :delete,
             html: { class: 'form-horizontal' } do |f|
%>
  <%= f.fields_for :employees do |ff| %>

    <!-- Choosing new admin-->
    <div class="row col-sm-offset-2 form-group">
      <%= ff.label :employee_id,
                  "Choose Administrator for #{ff.object.last_name}",
                  class: 'col-sm-4 control-label'
      %>
      <div class="col-sm-4">
        <%= ff.select :employee_id,
                     options_for_select(@admins),
                     {},
                     { class: 'form-control' }
        %>
      </div>
    </div>
  <% end %>

  <div class="row col-sm-offset-2 form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%= f.submit 'Delete administrator',
                      data: { confirm: 'Are you sure?' },
                      class: 'btn btn-danger'
        %>
      </div>
    </div>
<% end %>
