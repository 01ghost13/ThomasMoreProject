<% provide(:title,'Delete administrator') %>
<h1 class="row col-sm-offset-4">Delete administrator</h1>
<h3 class="row col-sm-offset-2">For deletion you must choose new Administrator for associated mentors.</h3>
<%= render 'shared/error_message' %>

<%= form_for @administrator, url: delete_administrator_path(params[:id]),
             method: :delete, html: { class: 'form-horizontal'} do |ff| %>
      <%= ff.fields_for :mentors do |f| %>
        <!-- Choosing new admin-->
        <div class="row col-sm-offset-2 form-group">
          <%= f.label :administrator_id, "Choose Administrator for #{f.object.info.last_name}",
                      class: 'col-sm-4 control-label' %>
          <div class="col-sm-4">
            <%= f.select :administrator_id, options_for_select(@admins),{}, {class: 'form-control'} %>
          </div>
        </div>
      <% end %>
    <div class="row col-sm-offset-2 form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%= ff.submit 'Delete administrator', data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>
