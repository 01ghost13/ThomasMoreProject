<div class='row'>
	<%= render 'shared/profile' %>
	<div class='col-sm-offset-1 col-sm-7'>
		<h1>Latest 5 results(<%= link_to('show all', student_result_of_tests_path(params[:id])) %>)</h1>
		<table class='table table-hover'>
      <thead>
      <tr>
        <td>Test name</td>
        <td>Start date</td>
        <td>Ended</td>
        <td>Result</td>
        <td>Edit</td>
      </tr>
      </thead>
		<% @test_results.each do |res| %>
			<tr>
				<td><h4><%= res[:name_of_test] %></h4></td>
				<td><h4><small><%= res[:date_of_start] %></small></h4></td>
				<td><h4><small>Is ended? <%= res[:is_ended] %></small></h4></td>
        <td><%= link_to('Result', student_result_of_test_path(res[:student_id], res[:id]),
                        class: 'btn btn-default') %></td>
				<td><%= link_to('Edit', edit_student_result_of_test_path(res[:student_id],res[:id]),
                        class: 'btn btn-warning') %></td>
			</tr>
		<% end %>
	</table>
	</div>
</div>

<% if @is_super_adm || @is_my_student || @is_student_of_my_tutor %>
	<div class='row'>
		<div class='btn-group col-sm-4' role='group' aria-label='...'>
			<%= link_to('Edit', edit_student_path(params[:id]), class: 'btn btn-warning col-sm-4') %>
			<%= link_to('Delete',@user, method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger col-sm-4') %>
		</div>
	</div>
<% end %>
<div class='row'>
	<div class='btn-group col-sm-4' role='group' aria-label='...'>
		<%= link_to('Choose test',tests_student_path(params[:id]), class: 'btn btn-primary col-sm-4') %>
	</div>
</div>
