<% provide(:title,'New student') %>
<%= javascript_include_tag 'students' %>
<h1 class="row col-sm-offset-4">Create student</h1>
<%= render 'shared/error_message' %>

<%= form_for @user,class: "form-horizontal" do |student_form| %>
 	<!--Code Name-->
	<div class="row col-sm-offset-2 form-group">
		<%= student_form.label :code_name, "Code name of student",class: "col-sm-2 control-label"%>
		<div class="col-sm-4">
			<%= student_form.text_field :code_name, class: 'form-control', placeholder: "Codename" %>
		</div>
	</div>
	
	<!--Gender-->
	<div class="row col-sm-offset-2 form-group">
		<%= student_form.label :gender,class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= student_form.select(:gender, options_for_select(
			  [
			    ['Unknown', 1],
			    ['Male', 2],
			    ['Female', 3]
			  ], @user.gender),{},{class: 'form-control'}) 
			 %>
		 </div>
	</div>
	<!--Schooling-->
	<div class="row col-sm-offset-2 form-group">
		<%= student_form.label :schooling_id, "Schooling", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= student_form.collection_select(:schooling_id, Schooling.all, :id, :name,{}, {class: 'form-control'}) %>
		</div>
	</div>
	<!--Is current in school?-->
	<div class="row col-sm-offset-2 form-group">
		<div class="col-sm-2">
			<%= student_form.label :is_current_in_school, "Is current in school?" %>
		</div>
		<div class="col-sm-1">
			<%= student_form.check_box(:is_current_in_school) %>
		</div>
	</div>
	<% if session[:user_type] == 'administrator' %>
		<!-- Adm -->
		<% if @is_super_adm %>
			<!-- Choosing adm -->
			<div class="row col-sm-offset-2 form-group">
				<%= label_tag :administrator_id, "Choose local administrator", class: "col-sm-2 control-label" %>
				<div class="col-sm-4">
					<%= select_tag :administrator_id, options_for_select(@admins),
                         {id: 'administrator_selection', class: 'form-control'}  %><br/>
				</div>
			</div>
		<% end %>
		<!-- Choosing tutor-->
		<div class="row col-sm-offset-2 form-group">
			<%= student_form.label :tutor_id, "Choose Tutor", class: "col-sm-2 control-label" %>
			<div class="col-sm-4">
				<%= student_form.select :tutor_id, options_for_select(@tutors), {} ,
                                {id: 'tutor_selection', class: 'form-control'}%>
			</div>
		</div>
	<% end %>
	<!--Password-->

	<div class="row col-sm-offset-2 form-group">
		<%= student_form.label :password, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= student_form.password_field :password, class: 'form-control', placeholder: "Password" %>
		</div>
	</div>
	
	<div class="row col-sm-offset-2 form-group">
		<%= student_form.label :password_confirmation, "Confirmation", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= student_form.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm your password" %>
		</div>
	</div>
	
	<div class="row col-sm-offset-2 form-group">
		<div class="col-sm-offset-2 col-sm-2">
			<%= student_form.submit "Confirm", class: "btn btn-primary" %>
		</div>
	</div>

<% end %>

