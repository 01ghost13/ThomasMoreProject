<%# @deprecated' %>
<% provide(:title,'Reset password') %>
<%= render 'shared/error_message' %>
<h1 class="row col-sm-offset-4">Reset password</h1>

<%= form_tag reset_password_path, class: 'col-sm-offset-2 form-horizontal' do %>
    <!-- Token -->
    <%= hidden_field_tag :reset_token, @token %>

    <!--Password-->
    <div class="row col-sm-offset-2 form-group">
      <%= label_tag :password,'Password', class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
    <div class="row col-sm-offset-2 form-group">
      <%= label_tag :password_confirmation, 'Confirmation', class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
        <%= password_field_tag :password_confirmation, nil, class: 'form-control',
                                     placeholder: 'Confirm your password' %>
      </div>
    </div>
    <!--Submition-->
    <div class="row col-sm-offset-2 form-group">
      <div class="col-sm-offset-2 col-sm-2">
        <%= submit_tag tf('common.forms.confirm'), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
