<% if resource.errors.any? %>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-6">
      <div class="alert alert-danger" role="alert">
        <ul>
          <% translate_errors(resource.errors, resource).each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
